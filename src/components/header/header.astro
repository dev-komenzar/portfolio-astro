---
import Button from './button.svelte'
---

<header class='header'>
	<div class='header-container'>
		<a href='/'>
			<h2 class='logo-text'>鴨川デジタル相談所</h2>
		</a>

		<nav class='nav'>
			<div class='hidden space-x-8 md:flex'>
				<a href=''>AAA</a><a href=''>BBB</a><a href=''>CCCC</a>
			</div>
			<div class='md:hidden'>
				<Button />
			</div>
		</nav>
	</div>
</header>

<style lang='scss'>
	.header {
		@apply sticky bottom-0 z-40 w-full justify-self-end bg-transparent;
		@apply bottom-2 top-0;

		padding-right: var(--gap);
		padding-left: var(--gap);

		@apply md:bottom-[none] md:top-4;
	}

	.header-container {
		@apply mx-4 box-border flex items-center justify-between rounded-md bg-neutral-50 px-2 py-2 outline outline-1 outline-neutral-100;
		@apply md:bg-transparent md:px-0 md:outline-none;
	}

	.logo-text {
		font-size: 1.25rem;
		font-weight: 500;
		line-height: 1.75rem;
		letter-spacing: 0.05em;
	}

	.nav {
		@apply flex items-center gap-6 text-sm font-semibold leading-6;
	}
</style>
